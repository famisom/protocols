<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.MainController" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 45 45;">
    <HBox spacing="20">
        <VBox>
            <Label text="Последние сообщения:"/>
            <ComboBox fx:id="messages" prefWidth="430.0"/>
        </VBox>
        <VBox>
            <Label text="Выберите протокол:"/>
            <ComboBox fx:id="protocols" prefWidth="150.0"/>
        </VBox>
    </HBox>
    <HBox spacing="20">
        <TextField fx:id="message" prefWidth="430.0" promptText="Введите сообщение"/>
        <Button fx:id="parse" prefWidth="150.0" text="Расшифровать"/>
    </HBox>
    <Label fx:id="result" alignment="CENTER" maxWidth="600.0" wrapText="true" textAlignment="JUSTIFY"/>
</VBox>